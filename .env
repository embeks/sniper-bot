BOT_MODE=monster                  # Use 'monster' for all features, 'basic' for original

# === AI SCORING ENGINE ===
MIN_AI_SCORE=0.6                  # Minimum AI score to buy (0-1 scale)
AI_LIQUIDITY_WEIGHT=0.3           # Importance of liquidity (30%)
AI_HOLDER_WEIGHT=0.2              # Importance of holder distribution (20%)
AI_SOCIAL_WEIGHT=0.2              # Importance of social signals (20%)
AI_PATTERN_WEIGHT=0.3             # Importance of pattern matching (30%)

# === MEV PROTECTION (JITO) ===
USE_JITO=false                     # Enable Jito bundles for MEV protection
JITO_URL=https://mainnet.block-engine.jito.wtf/api/v1
JITO_TIP=0.001                     # SOL tip for priority (0.001 = ~$0.15)
JITO_REGIONS=amsterdam,frankfurt,ny,tokyo  # Jito regions to use

