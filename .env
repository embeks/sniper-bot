# === DEX ARBITRAGE BOT ===
ENABLE_ARBITRAGE=true              # Enable cross-DEX arbitrage
ARB_MIN_PROFIT=2.0                # Minimum 2% profit to execute arb
ARB_MAX_POSITION=5.0              # Max 5 SOL per arbitrage trade
ARB_CHECK_INTERVAL=3              # Check for arb every 3 seconds
ARB_INCLUDE_ORCA=true             # Include Orca in arb calculations
ARB_INCLUDE_METEORA=true          # Include Meteora pools

# === AUTO-SCALING & COMPOUNDING ===
ENABLE_AUTO_COMPOUND=true         # Auto increase positions with profits
COMPOUND_THRESHOLD=10             # Compound after 10 SOL profit
COMPOUND_INCREASE=20              # Increase positions by 20% when compounding
SCALE_SCHEDULE=exponential        # Scaling strategy: linear, exponential, or conservative

# === POSITION & RISK LIMITS ===
MAX_POSITION_PER_TOKEN=5.0        # Max 5 SOL per token (scales with account)
MAX_POOL_PERCENTAGE=3             # Never own more than 3% of any pool
MAX_OPEN_POSITIONS=20             # Max 20 concurrent positions
DAILY_LOSS_LIMIT=50               # Stop trading if down 50 SOL in a day
DAILY_PROFIT_TARGET=100          # Daily target (for stats)
MAX_SLIPPAGE=5                   # Max 5% slippage allowed

# === LIQUIDITY THRESHOLDS (DYNAMIC) ===
RUG_LP_THRESHOLD=5.0              # Minimum 5 SOL liquidity for snipes
TRENDING_MIN_LP=10.0              # Minimum 10 SOL for trending tokens
ARB_MIN_LP=50.0                  # Minimum 50 SOL for arbitrage

# === PROFIT TARGETS (KEEP YOUR CURRENT) ===
TAKE_PROFIT_1=2.0                 # First target (2x)
TAKE_PROFIT_2=5.0                 # Second target (5x)
TAKE_PROFIT_3=10.0                # Third target (10x)
SELL_PERCENT_1=50                 # Sell 50% at first target
SELL_PERCENT_2=25                 # Sell 25% at second target
SELL_PERCENT_3=25                 # Sell 25% at third target

# === STOP LOSS & RISK MANAGEMENT ===
STOP_LOSS_PERCENT=50              # Stop loss at -50%
TRAILING_STOP_PERCENT=20          # Trailing stop 20% from peak
MAX_HOLD_TIME_SEC=3600            # Max hold 1 hour
PRICE_CHECK_INTERVAL_SEC=10       # Check price every 10 seconds

# === PERFORMANCE TRACKING ===
ENABLE_ANALYTICS=true             # Track detailed performance metrics
ANALYTICS_WEBHOOK=                # Optional: Send stats to webhook
REPORT_INTERVAL=3600              # Send performance report every hour
TRACK_GAS_COSTS=true             # Track transaction costs

# === ADVANCED FEATURES ===
ENABLE_VOLUME_ANALYSIS=true       # Analyze volume patterns
ENABLE_HOLDER_ANALYSIS=true       # Check holder distribution
ENABLE_CONTRACT_SCAN=true         # Scan for malicious contracts
ENABLE_HONEYPOT_CHECK=true        # Check for honeypots before buying




